{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "target": "es2020",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "outDir": "./dist"
  },
  "lib": ["es2015"],
  "types": ["node"],
  // TODO: adjust the paths in the include and exclude sections based on your project structure
  "include": ["src/**/*.ts"], 
  "exclude": ["node_modules", "**/*.spec.ts"]
}
