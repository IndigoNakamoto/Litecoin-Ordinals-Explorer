generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["views"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/// This table is a partition table and requires additional setup for migrations. Visit https://pris.ly/d/partition-tables for more info.
model inscriptions {
  inscription_id     String    @db.VarChar(255)
  address            String?   @db.VarChar(255)
  content_length     Int?
  content_type       String?   @db.VarChar(255)
  content_type_type  String    @db.VarChar(255)
  genesis_fee        BigInt?
  genesis_height     Int?
  inscription_number Int?
  next               String?   @db.VarChar(255)
  output_value       BigInt?
  parent             String?   @db.VarChar(255)
  previous           String?   @db.VarChar(255)
  processed          Boolean?  @default(false)
  nsfw               Boolean?  @default(false)
  rune               String?   @db.VarChar(255)
  sat                String?   @db.VarChar(255)
  satpoint           String?   @db.VarChar(255)
  timestamp          DateTime? @db.Timestamp(6)
  charms             String[]
  children           String[]

  @@id([inscription_id, content_type_type])
}

model update_progress {
  progress_key         String @id @db.VarChar(255)
  last_processed_block Int?
  last_processed_page  Int?
}
