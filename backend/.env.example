# Backend Environment Variables
# Copy this file to .env and fill in your actual values.

# Database Configuration
DATABASE_URL="postgresql://your_db_user:your_db_password@your_db_host:5432/your_db_name?schema=public"

# Application Configuration
PORT=3001
SESSION_SECRET="a_strong_random_session_secret_please_change"
# NODE_ENV="development" # or "production"

# Litecoin Node RPC Configuration (Ensure your Litecoin node is running and accessible)
LITECOIN_RPC_ENABLED=true
LITECOIN_RPC_USER="your_rpc_username"
LITECOIN_RPC_PASS="your_rpc_password"
LITECOIN_RPC_HOST="127.0.0.1" # or the IP address of your Litecoin node
LITECOIN_RPC_PORT="19332" # Default port for Litecoin mainnet, adjust if necessary (e.g., 19443 for testnet)
LITECOIN_RPC_PROTOCOL="http" # or "https" if your node uses SSL
LITECOIN_RPC_TIMEOUT=30000 # RPC timeout in milliseconds

# Inscription Service Configuration
# Example: Base fee for inscriptions, if applicable
# INSCRIPTION_BASE_FEE_SATS=1000

